void updateDisplay(float fillLevelPercent, float weight) {
    // Full refresh for initial setup
    display.firstPage();
    do {
        display.fillScreen(GxEPD_WHITE); // Clear the display
        display.drawBitmap(50, 0, bitmapData, 100, 100, GxEPD_BLACK);

        // Set text properties
        display.setTextColor(GxEPD_BLACK);
        display.setFont(&FreeMonoBold9pt7b);
        display.setTextSize(1);

        // Static text
        display.setCursor(10, 120);
        display.print("Fill Level: ");
        display.setCursor(10, 150);
        display.print("Weight: ");
    } while (display.nextPage());

    // Partial refresh for dynamic values
    display.setPartialWindow(130, 110, 70, 20); // Partial window for fill level percentage
    display.firstPage();
    do {
        display.fillScreen(GxEPD_WHITE);
        display.setCursor(130, 120);
        display.setTextColor(GxEPD_BLACK);
        display.setFont(&FreeMonoBold9pt7b);
        display.print(fillLevelPercent, 0);
        display.print(" %");
    } while (display.nextPage());

    display.setPartialWindow(90, 140, 70, 20); // Partial window for weight
    display.firstPage();
    do {
        display.fillScreen(GxEPD_WHITE);
        display.setCursor(90, 150);
        display.setTextColor(GxEPD_BLACK);
        display.setFont(&FreeMonoBold9pt7b);
        display.print(weight, 1);
        display.print(" g");
    } while (display.nextPage());

    display.powerOff();
}

